from lib.space_repository import SpaceRepository
from lib.space import Space

def test_get_all_spaces(db_connection):  
    db_connection.seed("seeds/spaces.sql")  
    repository = SpaceRepository(db_connection)  

    spaces = repository.all()

    assert spaces == [
        Space(1, 1, "The Oasis", "Enjoy views of the beach", 100),
        Space(2, 1, "Riverbend Cabin", "Explore the woods", 200),
        Space(3, 2, "Skycabin", "Great views of the nightsky", 150),
        Space(4, 2, "The Glen", "Amazing town to explore", 200),
        Space(5, 3, "Aurora", "Nightlife at your fingertip", 100)
    ]